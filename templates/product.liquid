{%- if product == blank -%}
  <section class="product-simple">
    <h1>Product unavailable</h1>
    <p>The product you're looking for could not be found.</p>
  </section>
{%- else -%}
  {%- assign selected_variant = product.selected_or_first_available_variant -%}
  <section class="product-simple" aria-labelledby="product-title">
    <header class="product-simple__header">
      <h1 id="product-title">{{ product.title }}</h1>
    </header>

    {%- if product.featured_image -%}
      <figure class="product-simple__media">
        {{
          product.featured_image
          | image_url: width: 1024
          | image_tag:
            alt: product.featured_image.alt | default: product.title,
            class: 'product-simple__image',
            loading: 'lazy'
        }}
      </figure>
    {%- endif -%}

    <div class="product-simple__price">
      {{ selected_variant.price | money }}
    </div>

    {%- form 'product', product, class: 'product-simple__form' -%}
      {{ form.errors | default_errors }}
      <input
        type="hidden"
        name="id"
        value="{{ selected_variant.id }}"
      >
      <input
        type="hidden"
        name="return_to"
        value="{{ routes.checkout_url }}"
      >
      <button
        type="submit"
        name="add"
        class="product-simple__buy-now"
        {%- unless selected_variant.available -%} disabled{%- endunless -%}
      >
        {%- if selected_variant.available -%}
          {{ 'Continue to checkout' }}
        {%- else -%}
          {{ 'products.product.sold_out' | t }}
        {%- endif -%}
      </button>
    {%- endform -%}

    {%- if product.description != blank -%}
      <div class="product-simple__description">
        {{ product.description }}
      </div>
    {%- endif -%}
  </section>
{%- endif -%}
