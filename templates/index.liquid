    <div class="product-preview-track">
      {% for image in featured_product.images limit: 8 %}
        <figure class="product-preview-item">
          <img
            src="{{ image | image_url: width: 820 }}"
            srcset="{{ image | image_url: width: 320 }} 320w, {{ image | image_url: width: 480 }} 480w, {{ image | image_url: width: 620 }} 620w, {{ image | image_url: width: 820 }} 820w"
            sizes="(min-width: 1280px) 260px, (min-width: 1024px) 220px, 70vw"
            alt="{{ image.alt | default: featured_product.title | escape }}"
            loading="lazy"
          >
          {% if image.alt != blank %}
            <figcaption class="visually-hidden">{{ image.alt }}</figcaption>
