{% comment %}
  General Book Bundle Offer - Buy 1 Get 6 Free
  Replaces the product picker with a general headline offer.
{% endcomment %}

<div class="book-bundle-offer-container">
  <div class="offer-content">
    <div class="offer-badge">Limited Time Only</div>
    <h1 class="offer-headline">
      Buy 1 Get 6 Free
    </h1>
    <p class="offer-subtext">
      Get our complete collection for the price of one. This exclusive offer is available for a limited time.
    </p>
  </div>
</div>

{% unless suppress_layout_styles %}
<style>
  /* 
    Full Page Container 
    Uses a modern dark gradient for a premium feel.
  */
  .book-bundle-offer-container {
    min-height: 100vh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: #ffffff;
    padding: 2rem;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  }

  /* Glassmorphism Card Effect */
  .offer-content {
    text-align: center;
    max-width: 700px;
    width: 100%;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 4rem 2rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    animation: fadeIn 0.8s ease-out;
  }

  .offer-badge {
    display: inline-block;
    background: linear-gradient(90deg, #f59e0b, #d97706);
    color: white;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    margin-bottom: 2rem;
    box-shadow: 0 4px 6px -1px rgba(245, 158, 11, 0.3);
  }

  .offer-headline {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 900;
    line-height: 1.1;
    margin: 0;
    margin-bottom: 1.5rem;
    background: linear-gradient(to right, #ffffff, #94a3b8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -0.02em;
  }

  .offer-subtext {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #cbd5e0;
    max-width: 500px;
    margin: 0 auto;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* 
    Theme Override Styles
    Hides standard header/footer to focus on the offer.
  */
  #shopify-section-header,
  #shopify-section-footer,
  .site-header,
  .site-footer,
  header[role="banner"],
  footer[role="contentinfo"],
  .announcement-bar,
  #announcement-bar {
    display: none !important;
  }

  /* Reset page width constraints */
  .page-width, .container {
    padding: 0 !important;
    max-width: none !important;
    margin: 0 !important;
    width: 100% !important;
  }
  
  .main-content {
    padding-top: 0 !important;
  }
</style>
{% endunless %}
