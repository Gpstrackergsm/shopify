{% assign product = all_products['dsm-5-tr-pocket-guide-for-child-and-adolescent-mental-health'] %}
{% assign hero_image = 'https://cdn.shopify.com/s/files/1/0989/7020/6389/files/51HHVAdf3fL._SL1083.jpg?v=1765623312' %}
{% assign primary_variant = product.selected_or_first_available_variant %}
<section class="pocket-guide-landing">
  <style>
    .pocket-guide-landing {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
      color: #0f172a;
      padding: 48px 0 64px;
    }
    .pocket-guide-landing .container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 18px;
    }
    .pocket-guide-landing .hero {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 24px;
      align-items: center;
      background: #fff;
      border-radius: 18px;
      padding: 28px;
      box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
      border: 1px solid #e2e8f0;
    }
    .pocket-guide-landing .badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 12px;
      background: #0f5aad;
      color: #fff;
      border-radius: 999px;
      font-weight: 800;
      letter-spacing: 0.02em;
      font-size: 0.92rem;
      box-shadow: 0 10px 24px rgba(15, 90, 173, 0.25);
    }
    .pocket-guide-landing .badge .dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #22c55e;
      box-shadow: 0 0 0 6px rgba(34, 197, 94, 0.18);
    }
    .pocket-guide-landing h1 {
      font-size: clamp(1.9rem, 3vw, 2.6rem);
      margin: 14px 0 10px;
      line-height: 1.2;
    }
    .pocket-guide-landing .subtitle {
      font-size: 1.05rem;
      line-height: 1.7;
      color: #334155;
      margin-bottom: 14px;
    }
    .pocket-guide-landing .pill {
      display: inline-block;
      background: #e0f2fe;
      color: #0f5aad;
      padding: 6px 12px;
      border-radius: 999px;
      font-weight: 700;
      font-size: 0.95rem;
      margin-bottom: 10px;
    }
    .pocket-guide-landing .bullets {
      list-style: none;
      padding: 0;
      margin: 16px 0 0;
      display: grid;
      gap: 10px;
    }
    .pocket-guide-landing .bullets li {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 10px;
      align-items: start;
      padding: 10px 12px;
      background: #f8fafc;
      border-radius: 12px;
      border: 1px solid #e2e8f0;
      font-weight: 600;
      color: #0f172a;
    }
    .pocket-guide-landing .bullets svg {
      width: 16px;
      height: 16px;
      color: #16a34a;
      margin-top: 2px;
    }
    .pocket-guide-landing .media {
      background: linear-gradient(180deg, #ffffff 0%, #e2e8f0 100%);
      border-radius: 16px;
      padding: 14px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.1);
    }
    .pocket-guide-landing .media img {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 12px;
      box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.9);
    }
    .pocket-guide-landing .cta-card {
      margin-top: 18px;
      background: #0f172a;
      color: #fff;
      padding: 18px;
      border-radius: 14px;
      display: grid;
      gap: 12px;
      box-shadow: 0 14px 34px rgba(15, 23, 42, 0.25);
    }
    .pocket-guide-landing .price-row {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: baseline;
    }
    .pocket-guide-landing .price {
      font-size: 1.6rem;
      font-weight: 900;
    }
    .pocket-guide-landing .label {
      font-size: 0.95rem;
      color: #cbd5e1;
    }
    .pocket-guide-landing .cta-card button {
      background: linear-gradient(135deg, #10b981, #22c55e);
      border: none;
      color: #0f172a;
      font-weight: 800;
      padding: 12px 14px;
      border-radius: 10px;
      cursor: pointer;
      width: 100%;
      font-size: 1rem;
      box-shadow: 0 12px 28px rgba(16, 185, 129, 0.3);
      transition: transform 0.1s ease, box-shadow 0.2s ease;
    }
    .pocket-guide-landing .cta-card button:hover,
    .pocket-guide-landing .cta-card button:focus {
      transform: translateY(-1px);
      box-shadow: 0 16px 32px rgba(16, 185, 129, 0.35);
    }
    .pocket-guide-landing .cta-card button[disabled] {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }
    .pocket-guide-landing .status {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-weight: 700;
    }
    .pocket-guide-landing .status .dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #22c55e;
      box-shadow: 0 0 0 5px rgba(34, 197, 94, 0.18);
    }
    .pocket-guide-landing .reassurance {
      color: #e2e8f0;
      font-size: 0.95rem;
      margin: 0;
    }
    .pocket-guide-landing .feature-grid {
      margin-top: 32px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 12px;
    }
    .pocket-guide-landing .feature-card {
      background: #fff;
      border: 1px solid #e2e8f0;
      border-radius: 14px;
      padding: 14px;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.07);
    }
    .pocket-guide-landing .feature-card h3 {
      margin: 0 0 6px;
      font-size: 1.02rem;
    }
    .pocket-guide-landing .feature-card p {
      margin: 0;
      color: #334155;
      line-height: 1.6;
      font-size: 0.96rem;
    }
  </style>
  <div class="container">
    <div class="hero">
      <div class="copy">
        <span class="badge"><span class="dot"></span>Digital pocket guide</span>
        <h1>DSM-5-TR Pocket Guide for Child and Adolescent Mental Health</h1>
        <p class="subtitle">A concise, clinician-friendly reference with DSM-5-TR diagnostic criteria, decision trees, and treatment notes tailored for youth.</p>
        <span class="pill">Instant digital download</span>
        <ul class="bullets">
          <li>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 13l4 4L19 7"/></svg>
            <span>Age-specific guidance for assessments, specifiers, and coding.</span>
          </li>
          <li>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 13l4 4L19 7"/></svg>
            <span>One-page algorithms and quick tips for differential diagnosis.</span>
          </li>
          <li>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 13l4 4L19 7"/></svg>
            <span>Downloadable PDF formatted for phone, tablet, and desktop.</span>
          </li>
        </ul>
        <div class="feature-grid">
          <div class="feature-card">
            <h3>Ready for practice</h3>
            <p>Jump straight into sessions with succinct diagnostic checklists and coding reminders.</p>
          </div>
          <div class="feature-card">
            <h3>Built for speed</h3>
            <p>Searchable, skimmable sections reduce time flipping between chapters during consults.</p>
          </div>
          <div class="feature-card">
            <h3>Always accessible</h3>
            <p>Keep the guide across devices with a single download link delivered after purchase.</p>
          </div>
        </div>
      </div>
      <div class="media">
        <figure>
          <img src="{{ hero_image }}" alt="DSM-5-TR pocket guide cover" loading="lazy">
        </figure>
        <div class="cta-card">
          <div>
            <div class="price-row">
              <span class="price">{% if primary_variant %}{{ primary_variant.price | money }}{% else %}$29{% endif %}</span>
              <span class="label">Digital PDF</span>
            </div>
            <div class="status"><span class="dot"></span>{% if product and product.available and primary_variant and primary_variant.available %}Ready to download today{% else %}Currently unavailable{% endif %}</div>
          </div>
          <form method="post" action="/cart/add" data-productid="{{ product.id }}" class="pocket-guide-form">
            <input type="hidden" name="id" value="{{ primary_variant.id }}" />
            <button type="submit" class="buy-now" {% if product == nil or primary_variant == nil or primary_variant.available == false %}disabled{% endif %}>Buy now</button>
          </form>
          <p class="reassurance">Secure checkout · Instant access link emailed immediately</p>
        </div>
      </div>
    </div>
  </div>
  <script>
    (function() {
      var form = document.querySelector('.pocket-guide-form');
      if (!form) return;
      form.addEventListener('submit', function(event) {
        event.preventDefault();
        var button = form.querySelector('button');
        if (!button) return;
        button.disabled = true;
        button.textContent = 'Adding…';
        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8'
          },
          body: new URLSearchParams(new FormData(form)).toString()
        })
          .then(function(response) {
            if (!response.ok) throw new Error('Network response was not ok');
            return response.json();
          })
          .then(function() {
            button.textContent = 'Added! Redirecting…';
            window.location.assign('/checkout');
          })
          .catch(function() {
            button.textContent = 'Please try again';
            button.disabled = false;
            form.submit();
          });
      });
    })();
  </script>
</section>
{% schema %}
{
  "name": "Pocket Guide Landing",
  "settings": []
}
{% endschema %}
