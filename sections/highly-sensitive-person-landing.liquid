{% assign product = all_products['the-highly-sensitive-person-how-to-thrive-when-the-world-overwhelms-you'] %}
{% assign primary_variant = product.selected_or_first_available_variant %}
{% assign hero_image = 'https://cdn.shopify.com/s/files/1/0989/7020/6389/files/81C1VUgFP_L._SL1500.jpg?v=1765380870' %}

<section class="hsp-landing">
  <style>
    .hsp-landing {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      color: #0f172a;
      background: radial-gradient(circle at 12% 20%, #e0f2fe 0, #f8fafc 25%, transparent 32%),
        radial-gradient(circle at 88% 10%, #fde68a 0, #fff7ed 18%, transparent 32%),
        linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
      padding: 56px 0 120px;
    }

    .hsp-landing .container {
      max-width: 1160px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .hsp-landing .hero {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 28px;
      align-items: center;
      background: #ffffff;
      border-radius: 20px;
      padding: 32px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 18px 44px rgba(15, 23, 42, 0.08);
    }

    .hsp-landing .eyebrow {
      display: inline-flex;
      gap: 10px;
      align-items: center;
      background: #0f172a;
      color: #e2e8f0;
      padding: 8px 12px;
      border-radius: 999px;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-weight: 800;
      font-size: 0.8rem;
    }

    .hsp-landing .eyebrow .pulse {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #22c55e;
      box-shadow: 0 0 0 6px rgba(34, 197, 94, 0.18);
    }

    .hsp-landing h1 {
      font-size: clamp(2.1rem, 3.6vw, 2.9rem);
      margin: 14px 0 12px;
      line-height: 1.15;
    }

    .hsp-landing .subtitle {
      color: #334155;
      font-size: 1.05rem;
      line-height: 1.7;
      margin-bottom: 16px;
    }

    .hsp-landing .pill {
      display: inline-block;
      background: #dcfce7;
      color: #15803d;
      padding: 6px 12px;
      border-radius: 999px;
      font-weight: 700;
      font-size: 0.95rem;
      margin-bottom: 8px;
    }

    .hsp-landing .bullets {
      list-style: none;
      padding: 0;
      margin: 16px 0;
      display: grid;
      gap: 10px;
    }

    .hsp-landing .bullets li {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 10px;
      align-items: start;
      padding: 10px 12px;
      background: #f8fafc;
      border-radius: 12px;
      border: 1px solid #e2e8f0;
      font-weight: 600;
      color: #0f172a;
    }

    .hsp-landing .bullets svg {
      width: 16px;
      height: 16px;
      color: #16a34a;
      margin-top: 2px;
    }

    .hsp-landing .media {
      background: linear-gradient(180deg, #ffffff 0%, #e2e8f0 100%);
      border-radius: 16px;
      padding: 16px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
    }

    .hsp-landing .media img {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 12px;
      box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.92);
    }

    .hsp-landing .cta-card {
      margin-top: 18px;
      background: #0f172a;
      color: #fff;
      padding: 18px;
      border-radius: 14px;
      display: grid;
      gap: 12px;
      box-shadow: 0 16px 34px rgba(15, 23, 42, 0.28);
    }

    .hsp-landing .price-row {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: baseline;
    }

    .hsp-landing .price {
      font-size: 1.7rem;
      font-weight: 900;
    }

    .hsp-landing .label {
      font-size: 0.98rem;
      color: #cbd5e1;
    }

    .hsp-landing .cta-card button {
      background: linear-gradient(135deg, #10b981, #22c55e);
      border: none;
      color: #0f172a;
      font-weight: 800;
      padding: 12px 14px;
      border-radius: 10px;
      cursor: pointer;
      width: 100%;
      font-size: 1rem;
      box-shadow: 0 12px 28px rgba(16, 185, 129, 0.28);
      transition: transform 0.1s ease, box-shadow 0.2s ease;
    }

    .hsp-landing .cta-card button:hover,
    .hsp-landing .cta-card button:focus {
      transform: translateY(-1px);
      box-shadow: 0 16px 32px rgba(16, 185, 129, 0.35);
    }

    .hsp-landing .cta-card button[disabled] {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .hsp-landing .status {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-weight: 700;
    }

    .hsp-landing .status .dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #22c55e;
      box-shadow: 0 0 0 5px rgba(34, 197, 94, 0.18);
    }

    .hsp-landing .reassurance {
      color: #e2e8f0;
      font-size: 0.95rem;
      margin: 0;
    }

    .hsp-landing .feature-grid {
      margin-top: 40px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 16px;
    }

    .hsp-landing .feature-card {
      background: #fff;
      border: 1px solid #e2e8f0;
      border-radius: 14px;
      padding: 16px;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.06);
    }

    .hsp-landing .feature-card h3 {
      margin: 0 0 6px;
      font-size: 1.04rem;
    }

    .hsp-landing .feature-card p {
      margin: 0;
      color: #334155;
      line-height: 1.6;
      font-size: 0.98rem;
    }

    .hsp-landing .highlight-banner {
      margin-top: 36px;
      background: linear-gradient(135deg, #0f172a, #111827);
      color: #e2e8f0;
      border-radius: 16px;
      padding: 18px;
      display: grid;
      gap: 10px;
      box-shadow: 0 16px 40px rgba(15, 23, 42, 0.26);
    }

    .hsp-landing .highlight-banner strong {
      color: #fbbf24;
    }

    .hsp-landing .list-title {
      margin: 50px 0 12px;
      font-size: clamp(1.5rem, 2.8vw, 2rem);
    }

    .hsp-landing .chapter-list {
      display: grid;
      gap: 10px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .hsp-landing .chapter-list li {
      background: #fff;
      border: 1px solid #e2e8f0;
      padding: 12px 14px;
      border-radius: 12px;
      display: flex;
      gap: 10px;
      align-items: center;
      font-weight: 700;
      color: #0f172a;
    }

    .hsp-landing .chapter-list li::before {
      content: "";
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #fbbf24;
      box-shadow: 0 0 0 5px rgba(251, 191, 36, 0.15);
    }

    .hsp-landing .grid-two {
      margin-top: 32px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 16px;
      align-items: start;
    }

    .hsp-landing .reviews {
      margin-top: 56px;
      background: #0f172a;
      color: #e2e8f0;
      border-radius: 18px;
      padding: 22px;
      border: 1px solid #1f2937;
      box-shadow: 0 18px 44px rgba(15, 23, 42, 0.35);
    }

    .hsp-landing .reviews h2 {
      margin: 0 0 10px;
      font-size: clamp(1.6rem, 3vw, 2.1rem);
    }

    .hsp-landing .reviews p.lede {
      color: #cbd5e1;
      margin: 0 0 18px;
      font-size: 1rem;
      line-height: 1.6;
    }

    .hsp-landing .reviews-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 14px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .hsp-landing .review-card {
      background: #111827;
      border: 1px solid #1f2937;
      border-radius: 14px;
      padding: 14px 14px 16px;
      display: grid;
      gap: 6px;
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.04);
    }

    .hsp-landing .reviewer {
      font-weight: 800;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .hsp-landing .stars {
      color: #fbbf24;
      display: inline-flex;
      gap: 2px;
    }

    .hsp-landing .stars svg {
      width: 16px;
      height: 16px;
    }

    .hsp-landing .review-meta {
      color: #cbd5e1;
      font-size: 0.92rem;
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      align-items: baseline;
    }

    .hsp-landing .review-card h3 {
      margin: 4px 0 0;
      font-size: 1rem;
      color: #f8fafc;
    }

    .hsp-landing .review-card p {
      margin: 2px 0 0;
      color: #e2e8f0;
      line-height: 1.6;
      font-size: 0.98rem;
    }

    .hsp-landing .helpful {
      color: #94a3b8;
      font-size: 0.92rem;
      margin-top: 4px;
    }

    @media (max-width: 720px) {
      .hsp-landing {
        padding-bottom: 80px;
      }

      .hsp-landing .hero {
        padding: 22px;
      }
    }
  </style>

