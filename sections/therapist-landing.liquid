<section class="lp-section lp-section--therapist" data-section-id="{{ section.id }}">
  <div class="lp-section__inner">
    <div class="lp-section__hero">
      <div class="lp-section__copy">
        {% if section.settings.subtitle != blank %}
          <p class="lp-section__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        {% if section.settings.title != blank %}
          <h1 class="lp-section__title">{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.text1 != blank %}
          <div class="lp-section__intro">{{ section.settings.text1 }}</div>
        {% endif %}
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a class="lp-section__button" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        {% endif %}
      </div>
      {% if section.settings.image != blank %}
        <div class="lp-section__media">
          {{ section.settings.image | image_url: width: 1400 | image_tag: loading: 'lazy', class: 'lp-section__image' }}
        </div>
      {% endif %}
    </div>

    {% assign detail_items = 0 %}
    {% for i in (2..10) %}
      {% assign key = 'text' | append: i %}
      {% if section.settings[key] != blank %}
        {% assign detail_items = detail_items | plus: 1 %}
      {% endif %}
    {% endfor %}

    {% if detail_items > 0 %}
      <div class="lp-section__details">
        <div class="lp-section__details-grid">
          {% assign detail_index = 0 %}
          {% for i in (2..10) %}
            {% assign key = 'text' | append: i %}
            {% assign content = section.settings[key] %}
            {% if content != blank %}
              {% assign detail_index = detail_index | plus: 1 %}
              <div class="lp-section__card">
                <span class="lp-section__card-number">{{ detail_index | prepend: '0' }}</span>
                <div class="lp-section__card-body">{{ content }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
.lp-section {
  --lp-accent: #0f9d58;
  background: linear-gradient(180deg, #f5fff9 0%, #d1fae5 100%);
  padding: 3.5rem 1.5rem;
  color: #0f172a;
  font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
}
.lp-section__inner {
  max-width: 1160px;
  margin: 0 auto;
}
.lp-section__hero {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2.5rem;
  align-items: center;
  margin-bottom: 3rem;
}
.lp-section__copy {
  background: #fff;
  padding: 2rem;
  border-radius: 28px;
  box-shadow: 0 25px 65px rgba(15, 23, 42, 0.12);
}
.lp-section__subtitle {
  text-transform: uppercase;
  letter-spacing: 0.18em;
  font-size: 0.9rem;
  color: var(--lp-accent);
  margin-bottom: 0.5rem;
}
.lp-section__title {
  font-size: clamp(2rem, 4vw, 3.2rem);
  margin-bottom: 1rem;
}
.lp-section__intro {
  color: #475569;
  line-height: 1.8;
  font-size: 1.05rem;
  margin-bottom: 1.5rem;
}
.lp-section__button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.9rem 2.4rem;
  border-radius: 999px;
  background: var(--lp-accent);
  color: #fff;
  text-decoration: none;
  font-weight: 600;
  box-shadow: 0 20px 35px rgba(15, 118, 72, 0.35);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.lp-section__button:hover {
  transform: translateY(-1px);
  box-shadow: 0 30px 45px rgba(15, 118, 72, 0.45);
}
.lp-section__media {
  background: #fff;
  padding: 1.5rem;
  border-radius: 32px;
  box-shadow: 0 35px 75px rgba(15, 23, 42, 0.15);
}
.lp-section__image {
  width: 100%;
  border-radius: 22px;
  display: block;
}
.lp-section__details {
  background: #fff;
  padding: 2.5rem;
  border-radius: 32px;
  box-shadow: 0 25px 60px rgba(15, 23, 42, 0.12);
}
.lp-section__details-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.25rem;
}
.lp-section__card {
  border: 1px solid rgba(15, 118, 72, 0.18);
  border-radius: 20px;
  padding: 1.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}
.lp-section__card-number {
  font-weight: 700;
  color: var(--lp-accent);
  font-size: 0.85rem;
  letter-spacing: 0.08em;
}
.lp-section__card-body {
  color: #1e293b;
  line-height: 1.6;
}
@media (max-width: 640px) {
  .lp-section__copy,
  .lp-section__details {
    padding: 1.5rem;
  }
  .lp-section__card {
    padding: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Therapist Landing",
  "settings": [
    {"type": "text", "id": "title", "label": "Title", "default": "Support your caseload"},
    {"type": "text", "id": "subtitle", "label": "Subtitle", "default": "Designed for clinicians"},
    {"type": "image_picker", "id": "image", "label": "Hero image"},
    {"type": "text", "id": "button_label", "label": "Button label", "default": "Explore resources"},
    {"type": "url", "id": "button_link", "label": "Button link"},
    {"type": "richtext", "id": "text1", "label": "Text 1"},
    {"type": "richtext", "id": "text2", "label": "Text 2"},
    {"type": "richtext", "id": "text3", "label": "Text 3"},
    {"type": "richtext", "id": "text4", "label": "Text 4"},
    {"type": "richtext", "id": "text5", "label": "Text 5"},
    {"type": "richtext", "id": "text6", "label": "Text 6"},
    {"type": "richtext", "id": "text7", "label": "Text 7"},
    {"type": "richtext", "id": "text8", "label": "Text 8"},
    {"type": "richtext", "id": "text9", "label": "Text 9"},
    {"type": "richtext", "id": "text10", "label": "Text 10"}
  ],
  "presets": [
    {"name": "Therapist Landing"}
  ]
}
{% endschema %}
