{% assign product = all_products['assessment-in-counseling-practice-and-applications'] %}
{% assign available_variant = product.first_available_variant %}
{% assign is_available = false %}
{% if product and product.available and available_variant and available_variant.available %}
  {% assign is_available = true %}
{% endif %}
{% assign price_text = '$29' %}
{% if product and product.price %}
  {% assign price_text = product.price | money %}
{% endif %}
{% assign hero_image = 'https://cdn.shopify.com/s/files/1/0989/7020/6389/files/71K475eXeTL._SY522.jpg?v=1765757862' %}
{% if product and product.featured_image %}
  {% assign hero_image = product.featured_image | image_url: width: 900 %}
{% endif %}

<div class="assessment-landing">
  <style>
    .assessment-landing {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      color: #0b1b2b;
      background: #f5f8fc;
    }
    .assessment-landing .container {
      max-width: 1080px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }
    .assessment-landing h1,
    .assessment-landing h2,
    .assessment-landing h3 {
      color: #0b1b2b;
    }
    .assessment-landing p {
      color: #40556d;
      line-height: 1.7;
    }
    .page-hero {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 2rem;
      align-items: center;
      padding: 3rem 0 2rem;
    }
    .hero-media {
      position: relative;
      background: linear-gradient(180deg, #ffffff, #e9f0ff);
      border: 1px solid rgba(12, 43, 80, 0.12);
      border-radius: 16px;
      padding: 1.25rem;
      box-shadow: 0 16px 38px rgba(12, 43, 80, 0.14);
    }
    .hero-media img {
      width: 100%;
      display: block;
      border-radius: 12px;
      box-shadow: inset 0 0 0 1px rgba(12, 43, 80, 0.08);
      background: #fff;
    }
    .hero-badge {
      position: absolute;
      top: 1rem;
      left: 1rem;
      background: #1c4d87;
      color: #fff;
      padding: 0.45rem 1rem;
      border-radius: 999px;
      font-size: 0.92rem;
      font-weight: 800;
      letter-spacing: 0.01em;
      box-shadow: 0 10px 25px rgba(28, 77, 135, 0.3);
    }
    .hero-content h1 {
      font-size: clamp(2.1rem, 4vw, 3rem);
      margin-bottom: 1rem;
      line-height: 1.2;
    }
    .hero-content .subhead {
      font-size: 1.12rem;
      color: #2c3e55;
      line-height: 1.65;
    }
    .pill-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.6rem;
      margin: 1rem 0;
    }
    .pill-list span {
      background: rgba(16, 43, 77, 0.08);
      border: 1px solid rgba(16, 43, 77, 0.14);
      padding: 0.45rem 0.85rem;
      border-radius: 999px;
      font-weight: 700;
      color: #123a70;
      font-size: 0.95rem;
    }
    .purchase-card {
      background: #fff;
      border: 1px solid rgba(12, 43, 80, 0.12);
      border-radius: 16px;
      padding: 1.5rem;
      box-shadow: 0 18px 40px rgba(12, 43, 80, 0.12);
      margin-top: 1.25rem;
      display: grid;
      gap: 0.8rem;
      max-width: 460px;
    }
    .purchase-price {
      font-size: 1.65rem;
      font-weight: 850;
      color: #0b1b2b;
    }
    .purchase-price span {
      display: block;
      font-size: 0.95rem;
      color: #40556d;
      font-weight: 600;
    }
    .buy-now-form {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
    }
    .buy-now {
      background: linear-gradient(135deg, #1d5bb5, #123a70);
      color: #fff;
      border: none;
      border-radius: 12px;
      padding: 0.95rem 1.2rem;
      font-size: 1rem;
      font-weight: 850;
      cursor: pointer;
      transition: transform 120ms ease, box-shadow 120ms ease;
      box-shadow: 0 12px 30px rgba(29, 91, 181, 0.35);
    }
    .buy-now:hover:not([disabled]),
    .buy-now:focus-visible:not([disabled]) {
      transform: translateY(-1px);
      box-shadow: 0 16px 36px rgba(29, 91, 181, 0.45);
    }
    .buy-now[disabled] {
      opacity: 0.65;
      cursor: not-allowed;
      box-shadow: none;
    }
    .reassurance {
      display: grid;
      gap: 0.35rem;
      font-size: 0.95rem;
      color: #32455a;
    }
    .feature-section {
      padding: 2.5rem 0 1rem;
    }
    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.25rem;
    }
    .feature-card {
      background: #fff;
      border: 1px solid rgba(12, 43, 80, 0.12);
      border-radius: 14px;
      padding: 1.15rem;
      box-shadow: 0 12px 28px rgba(12, 43, 80, 0.08);
    }
    .feature-card h3 {
      margin-bottom: 0.5rem;
      font-size: 1.12rem;
    }
    .feature-card p,
    .feature-card ul {
      color: #40556d;
      line-height: 1.6;
    }
    .feature-card ul {
      padding-left: 1.1rem;
      margin: 0.5rem 0 0;
    }
    .cta-banner {
      margin: 3rem 0;
      background: linear-gradient(135deg, #123a70, #0d2e58);
      color: #eaf2ff;
      border-radius: 18px;
      padding: 1.75rem 1.5rem;
      display: grid;
      gap: 0.8rem;
      box-shadow: 0 20px 42px rgba(12, 43, 80, 0.2);
    }
    .cta-banner strong {
      font-size: 1.2rem;
    }
    @media (max-width: 640px) {
      .page-hero {
        padding: 2.5rem 0 1.5rem;
      }
      .purchase-card {
        max-width: 100%;
      }
    }
  </style>

  <div class="container">
    <div class="page-hero">
      <div class="hero-media">
        <span class="hero-badge">Digital Download</span>
        <img src="{{ hero_image }}" alt="Assessment in Counseling Practice and Applications cover" loading="lazy" />
      </div>
      <div class="hero-content">
        <h1>Assessment in Counseling: Practice and Applications</h1>
        <p class="subhead">Master practical assessment strategies with ready-to-use templates, case examples, and guidance grounded in real-world counseling scenarios.</p>
        <div class="pill-list">
          <span>PDF Download</span>
          <span>Instant Access</span>
          <span>For Practitioners & Students</span>
        </div>
        <div class="purchase-card">
          <div class="purchase-price">{{ price_text }} <span>One-time payment</span></div>
          {% if is_available %}
            {% form 'product', product, class: 'buy-now-form' %}
              <input type="hidden" name="id" value="{{ available_variant.id }}" />
              <button type="submit" name="add" class="buy-now">Download Now</button>
            {% endform %}
          {% else %}
            <button type="button" class="buy-now" disabled>Sold Out</button>
          {% endif %}
          <div class="reassurance">
            <span>✔️ Secure checkout via Shopify</span>
            <span>✔️ Instant email access after purchase</span>
            <span>✔️ 30-day satisfaction guarantee</span>
          </div>
        </div>
      </div>
    </div>

    <div class="feature-section">
      <div class="feature-grid">
        <div class="feature-card">
          <h3>Complete Assessment Toolkit</h3>
          <p>Structured intake forms, rating scales, and progress tracking templates help you capture the right data without slowing sessions down.</p>
        </div>
        <div class="feature-card">
          <h3>Real-World Case Examples</h3>
          <p>See how experienced clinicians apply assessments across anxiety, mood, and trauma presentations with step-by-step rationale.</p>
        </div>
        <div class="feature-card">
          <h3>Ethical & Culturally Responsive</h3>
          <p>Guidance on informed consent, cultural humility, and communicating results so every client feels respected and understood.</p>
        </div>
        <div class="feature-card">
          <h3>Ready for Sessions Tomorrow</h3>
          <p>Printable PDFs and digital-friendly formats make it easy to integrate the tools into telehealth or in-person counseling right away.</p>
        </div>
      </div>
    </div>

    <div class="cta-banner">
      <div>
        <strong>Upgrade your assessment confidence for just {{ price_text }}.</strong>
        <p>Deliver clear, actionable insights to clients and supervisors with polished tools built for counseling practice.</p>
      </div>
      {% if is_available %}
        {% form 'product', product %}
          <input type="hidden" name="id" value="{{ available_variant.id }}" />
          <button type="submit" name="add" class="buy-now">Add to Cart</button>
        {% endform %}
      {% else %}
        <button type="button" class="buy-now" disabled>Unavailable</button>
      {% endif %}
    </div>
  </div>
</div>
