{% assign product = all_products['seeking-safety-a-treatment-manual-for-ptsd-and-substance-abuse'] %}
{% assign primary_variant = product.selected_or_first_available_variant %}
{% assign hero_image = 'https://cdn.shopify.com/s/files/1/0989/7020/6389/files/71x5LmZTHwL._SL1500.jpg?v=1766405710' %}

<section class="seeking-safety-landing">
  <style>
    .seeking-safety-landing {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      background: linear-gradient(180deg, #f8fafc 0%, #eef2f7 100%);
      color: #0f172a;
      padding: 64px 0 120px;
    }

    .seeking-safety-landing .container {
      max-width: 1120px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .seeking-safety-landing .hero {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 28px;
      align-items: center;
      background: #ffffff;
      border-radius: 18px;
      padding: 32px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 16px 40px rgba(15, 23, 42, 0.08);
    }

    .seeking-safety-landing .eyebrow {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: #0f172a;
      color: #e2e8f0;
      padding: 8px 12px;
      border-radius: 999px;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-weight: 800;
      font-size: 0.78rem;
    }

    .seeking-safety-landing .eyebrow .dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #22c55e;
      box-shadow: 0 0 0 6px rgba(34, 197, 94, 0.2);
    }

    .seeking-safety-landing h1 {
      font-size: clamp(2rem, 3.5vw, 2.8rem);
      line-height: 1.2;
      margin: 14px 0 12px;
    }

    .seeking-safety-landing .subtitle {
      color: #334155;
      font-size: 1.05rem;
      line-height: 1.7;
      margin-bottom: 16px;
    }

    .seeking-safety-landing .pill {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: #e0f2fe;
      color: #0369a1;
      padding: 6px 12px;
      border-radius: 999px;
      font-weight: 700;
      font-size: 0.92rem;
      margin-bottom: 12px;
    }

    .seeking-safety-landing .bullets {
      list-style: none;
      padding: 0;
      margin: 16px 0 0;
      display: grid;
      gap: 10px;
    }

    .seeking-safety-landing .bullets li {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 10px;
      align-items: start;
      padding: 10px 12px;
      background: #f8fafc;
      border-radius: 12px;
      border: 1px solid #e2e8f0;
      font-weight: 600;
      color: #0f172a;
    }

    .seeking-safety-landing .bullets svg {
      width: 16px;
      height: 16px;
      color: #16a34a;
      margin-top: 2px;
    }

    .seeking-safety-landing .media {
      background: linear-gradient(180deg, #ffffff 0%, #e2e8f0 100%);
      border-radius: 16px;
      padding: 18px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
    }

    .seeking-safety-landing .media img {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 12px;
    }

    .seeking-safety-landing .cta-card {
      margin-top: 20px;
      background: #0f172a;
      color: #fff;
      padding: 18px;
      border-radius: 14px;
      display: grid;
      gap: 12px;
      box-shadow: 0 16px 34px rgba(15, 23, 42, 0.28);
    }

    .seeking-safety-landing .price-row {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: baseline;
    }

    .seeking-safety-landing .price {
      font-size: 1.8rem;
      font-weight: 900;
    }

    .seeking-safety-landing .label {
      font-size: 0.98rem;
      color: #cbd5e1;
    }

    .seeking-safety-landing .cta-card button {
      background: linear-gradient(135deg, #22c55e, #16a34a);
      border: none;
      color: #0f172a;
      font-weight: 800;
      padding: 12px 14px;
      border-radius: 10px;
      cursor: pointer;
      width: 100%;
      font-size: 1rem;
      box-shadow: 0 12px 28px rgba(34, 197, 94, 0.28);
      transition: transform 0.1s ease, box-shadow 0.2s ease;
    }

    .seeking-safety-landing .cta-card button:hover,
    .seeking-safety-landing .cta-card button:focus {
      transform: translateY(-1px);
      box-shadow: 0 16px 32px rgba(34, 197, 94, 0.35);
    }

    .seeking-safety-landing .cta-card button[disabled] {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .seeking-safety-landing .status {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-weight: 700;
    }

    .seeking-safety-landing .status .dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #22c55e;
      box-shadow: 0 0 0 5px rgba(34, 197, 94, 0.18);
    }

    .seeking-safety-landing .reassurance {
      color: #e2e8f0;
      font-size: 0.95rem;
      margin: 0;
    }

    .seeking-safety-landing .feature-grid {
      margin-top: 40px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 16px;
    }

    .seeking-safety-landing .feature-card {
      background: #fff;
      border: 1px solid #e2e8f0;
      border-radius: 14px;
      padding: 16px;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.06);
    }

    .seeking-safety-landing .feature-card h3 {
      margin: 0 0 6px;
      font-size: 1.04rem;
    }

    .seeking-safety-landing .feature-card p {
      margin: 0;
      color: #334155;
      line-height: 1.6;
      font-size: 0.98rem;
    }

    .seeking-safety-landing .highlight-banner {
      margin-top: 34px;
      background: linear-gradient(135deg, #0f172a, #111827);
      color: #e2e8f0;
      border-radius: 16px;
      padding: 18px;
      display: grid;
      gap: 10px;
      box-shadow: 0 16px 40px rgba(15, 23, 42, 0.26);
    }

    .seeking-safety-landing .highlight-banner strong {
      color: #22c55e;
    }

    @media (max-width: 720px) {
      .seeking-safety-landing { padding-bottom: 90px; }
      .seeking-safety-landing .hero { padding: 22px; }
    }
  </style>

  <div class="container">
    <div class="hero">
      <div class="copy">
        <span class="eyebrow"><span class="dot"></span>Digital Treatment Manual</span>
        <h1>Seeking Safety: A Treatment Manual for PTSD and Substance Abuse</h1>
        <p class="subtitle">A structured, evidence-based guide designed to help clinicians and clients build safety, stabilize symptoms, and move forward with practical coping tools.</p>
        <span class="pill">Instant digital download · $29</span>
        <ul class="bullets">
          <li>
            <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M6.173 12.927 1.4 8.154l1.4-1.4 3.373 3.373 7.027-7.027 1.4 1.4z"/></svg>
            Structured session-by-session topics focused on safety, grounding, and healthy coping.
          </li>
          <li>
            <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M6.173 12.927 1.4 8.154l1.4-1.4 3.373 3.373 7.027-7.027 1.4 1.4z"/></svg>
            Ready-to-use handouts, worksheets, and scripts to support trauma-informed care.
          </li>
          <li>
            <svg viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M6.173 12.927 1.4 8.154l1.4-1.4 3.373 3.373 7.027-7.027 1.4 1.4z"/></svg>
            Flexible delivery for individual, group, or telehealth settings.
          </li>
        </ul>

        <div class="cta-card">
          <div class="price-row">
            <span class="price">{{ primary_variant.price | money }}</span>
            <span class="label">One-time purchase · Digital product</span>
          </div>
          {% form 'product', product, class: 'cta-form' %}
            <input type="hidden" name="id" value="{{ primary_variant.id }}">
            <button type="submit" {% unless primary_variant.available %}disabled{% endunless %}>
              {% if primary_variant.available %}Get the download{% else %}Sold out{% endif %}
            </button>
          {% endform %}
          <div class="status"><span class="dot"></span>Secure checkout</div>
          <p class="reassurance">PDF + mobile-friendly formats. Instant access after purchase.</p>
        </div>
      </div>
      <div class="media">
        <img src="{{ hero_image }}" alt="Seeking Safety treatment manual cover">
      </div>
    </div>

    <div class="feature-grid">
      <div class="feature-card">
        <h3>Stabilize first</h3>
        <p>Grounding and safety strategies to reduce crises and create a foundation for deeper healing.</p>
      </div>
      <div class="feature-card">
        <h3>Trauma-informed structure</h3>
        <p>Clear session guides that balance trauma recovery with substance use support.</p>
      </div>
      <div class="feature-card">
        <h3>Clinician-ready tools</h3>
        <p>Printable handouts, worksheets, and facilitator tips to streamline prep time.</p>
      </div>
      <div class="feature-card">
        <h3>Flexible delivery</h3>
        <p>Adaptable for groups, individual therapy, or telehealth without losing fidelity.</p>
      </div>
    </div>

    <div class="highlight-banner">
      <div class="status"><span class="dot"></span> Includes lifetime updates and immediate access after checkout.</div>
      <p class="reassurance">Use the manual to guide safe, compassionate sessions with clear objectives, worksheets, and trauma-sensitive language.</p>
    </div>
  </div>
</section>
