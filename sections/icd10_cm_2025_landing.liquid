{% assign book = all_products['icd-10-cm-2025-the-complete-official-codebook'] %}
{% assign hero_image = book.featured_image | default: 'https://cdn.shopify.com/s/files/1/0673/8755/5923/files/61RBnxMd4eL._SL1200.jpg?v=1764165678' %}

<section class="icd10-landing">
  <style>
    .icd10-landing {
      font-family: inherit;
      padding: 40px 16px 64px;
      background: #f8fafc;
    }
    .icd10-landing .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 12px;
    }
    .icd10-landing .hero {
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
      padding: 32px;
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 28px;
      align-items: center;
      margin-bottom: 48px;
    }
    .icd10-landing .hero-image img {
      width: 100%;
      height: auto;
      border-radius: 12px;
      object-fit: cover;
      box-shadow: 0 10px 24px rgba(15, 23, 42, 0.12);
    }
    .icd10-landing .eyebrow {
      font-size: 0.95rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: #0f172a;
      font-weight: 700;
      margin-bottom: 10px;
    }
    .icd10-landing h1 {
      font-size: clamp(1.8rem, 3vw, 2.4rem);
      margin: 0 0 12px;
      color: #0f172a;
    }
    .icd10-landing .hero-subtitle {
      font-size: 1.05rem;
      color: #1f2937;
      margin-bottom: 16px;
    }
    .icd10-landing .bullet-list {
      list-style: none;
      padding: 0;
      margin: 0 0 20px;
      display: grid;
      gap: 8px;
    }
    .icd10-landing .bullet-list li {
      display: flex;
      align-items: flex-start;
      gap: 10px;
      color: #0f172a;
      font-weight: 600;
    }
    .icd10-landing .bullet-list li::before {
      content: '‚Ä¢';
      color: #0ea5e9;
      font-size: 1.2rem;
      line-height: 1;
    }
    .icd10-landing .pricing {
      margin: 18px 0;
      display: flex;
      align-items: baseline;
      gap: 12px;
      flex-wrap: wrap;
    }
    .icd10-landing .pricing .compare {
      color: #6b7280;
      text-decoration: line-through;
      font-size: 1rem;
    }
    .icd10-landing .pricing .price {
      font-size: 1.6rem;
      font-weight: 800;
      color: #0f172a;
      background: #e0f2fe;
      padding: 8px 14px;
      border-radius: 8px;
    }
    .icd10-landing .cta-button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 14px 22px;
      background: #0ea5e9;
      color: #ffffff;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 700;
      box-shadow: 0 12px 24px rgba(14, 165, 233, 0.25);
      transition: transform 0.1s ease, box-shadow 0.2s ease;
    }
    .icd10-landing .cta-button:hover {
      transform: translateY(-1px);
      box-shadow: 0 16px 32px rgba(14, 165, 233, 0.35);
    }
    .icd10-landing .cta-reassurance {
      margin-top: 10px;
      color: #4b5563;
      font-size: 0.95rem;
    }
    .icd10-landing section {
      margin-bottom: 48px;
    }
    .icd10-landing h2 {
      font-size: clamp(1.5rem, 2.5vw, 1.9rem);
      margin-bottom: 16px;
      color: #0f172a;
    }
    .icd10-landing .who-grid,
    .icd10-landing .inside-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 18px;
    }
    .icd10-landing .who-card,
    .icd10-landing .inside-card,
    .icd10-landing .trust-card,
    .icd10-landing .testimonial-card {
      background: #ffffff;
      border-radius: 12px;
      padding: 18px;
      box-shadow: 0 10px 24px rgba(15, 23, 42, 0.06);
      height: 100%;
    }
    .icd10-landing .icon-circle {
      width: 44px;
      height: 44px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      background: #e0f2fe;
      color: #0ea5e9;
      font-weight: 800;
      margin-bottom: 12px;
      font-size: 1.1rem;
    }
    .icd10-landing .inside-layout {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 18px;
    }
    .icd10-landing ul.checklist {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      gap: 10px;
    }
    .icd10-landing ul.checklist li {
      display: flex;
      gap: 10px;
      color: #0f172a;
      font-weight: 600;
    }
    .icd10-landing ul.checklist li::before {
      content: '‚úì';
      color: #16a34a;
      font-weight: 900;
    }
    .icd10-landing .benefits-card h3 {
      margin-top: 0;
      margin-bottom: 12px;
    }
    .icd10-landing .benefits-card ul {
      margin: 0;
      padding-left: 18px;
      color: #0f172a;
      display: grid;
      gap: 6px;
    }
    .icd10-landing .trust-bar {
      margin-top: 12px;
      padding: 10px 14px;
      border: 1px solid #e5e7eb;
      border-radius: 10px;
      background: #f8fafc;
      color: #4b5563;
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      justify-content: center;
      font-weight: 600;
    }
    .icd10-landing .testimonial-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 16px;
    }
    .icd10-landing .testimonial-card h3 {
      margin: 0 0 6px;
      font-size: 1.05rem;
      color: #0f172a;
    }
    .icd10-landing .testimonial-role {
      color: #6b7280;
      margin-bottom: 10px;
      font-size: 0.95rem;
    }
    .icd10-landing .final-cta {
      text-align: center;
      background: linear-gradient(135deg, #e0f2fe, #f8fafc);
      border-radius: 16px;
      padding: 32px 20px;
      box-shadow: 0 12px 32px rgba(14, 165, 233, 0.14);
    }
    .icd10-landing .final-cta h2 {
      margin: 0 0 10px;
    }
    .icd10-landing .final-cta p {
      margin: 0 0 18px;
      color: #1f2937;
      font-size: 1.05rem;
    }
    @media (max-width: 900px) {
      .icd10-landing .hero {
        grid-template-columns: 1fr;
        padding: 24px;
      }
    }
    @media (max-width: 640px) {
      .icd10-landing {
        padding: 28px 12px 48px;
      }
      .icd10-landing .hero {
        padding: 20px;
      }
      .icd10-landing .cta-button {
        width: 100%;
      }
    }
  </style>

  <div class="container">
    <header class="hero">
      <div class="hero-image">
        <img src="{{ hero_image | img_url: '800x' }}" alt="Cover of the ICD-10-CM 2025 complete official code book">
      </div>
      <div class="hero-copy">
        <div class="eyebrow">2025 ICD-10-CM Code Book</div>
        <h1>{{ section.settings.hero_heading | default: book.title }}</h1>
        <p class="hero-subtitle">{{ section.settings.hero_subtitle | default: "The official, complete 2025 ICD-10-CM code book trusted by medical coders, billers, auditors, and students preparing for certification exams." }}</p>
        {% assign hero_bullets = section.blocks | where: 'type', 'hero_bullet' %}
        {% if hero_bullets.size > 0 %}
          <ul class="bullet-list">
            {% for block in hero_bullets %}
              <li>{{ block.settings.text }}</li>
            {% endfor %}
          </ul>
        {% else %}
          <ul class="bullet-list">
            <li>Complete 2025 ICD-10-CM official code set</li>
            <li>Perfect for coders, billers, and auditors</li>
            <li>Organized and easy to navigate</li>
            <li>Essential for accurate reimbursement and compliance</li>
          </ul>
        {% endif %}
        <div class="pricing">
          {% if book.compare_at_price and book.compare_at_price > book.price %}
            <div class="compare">Regular: {{ book.compare_at_price | money }}</div>
            <div class="price">Today: {{ book.price | money }}</div>
          {% else %}
            <div class="price">{{ book.price | money }}</div>
          {% endif %}
        </div>
        <a class="cta-button" href="{{ book.url }}" aria-label="Get the 2025 ICD-10-CM Code Book">Get the 2025 ICD-10-CM Code Book</a>
        <div class="cta-reassurance">Fast digital processing and secure checkout.</div>
      </div>
    </header>

    <main>
      <section aria-labelledby="who-heading">
        <h2 id="who-heading">Who Is This ICD-10-CM 2025 Code Book For?</h2>
        <div class="who-grid">
          <div class="who-card">
            <div class="icon-circle">üíº</div>
            <h3>Medical Coders & Billers</h3>
            <p>Reliable reference to code confidently and reduce claim errors.</p>
          </div>
          <div class="who-card">
            <div class="icon-circle">üéì</div>
            <h3>Students & Exam Candidates</h3>
            <p>Study with the official text to prepare for certification success.</p>
          </div>
          <div class="who-card">
            <div class="icon-circle">üè•</div>
            <h3>Hospital & Clinic Staff</h3>
            <p>Keep teams aligned with 2025 standards across departments.</p>
          </div>
          <div class="who-card">
            <div class="icon-circle">üß≠</div>
            <h3>Independent Consultants</h3>
            <p>Deliver accurate guidance to clients with the latest updates.</p>
          </div>
        </div>
      </section>

      <section aria-labelledby="inside-heading">
        <h2 id="inside-heading">What‚Äôs Inside the 2025 ICD-10-CM Code Book?</h2>
        <p>Stay ahead of every change with the complete, official diagnostic code set and clear guidance for correct usage.</p>
        <div class="inside-layout inside-grid">
          <div class="inside-card">
            <ul class="checklist">
              <li>All 2025 updated ICD-10-CM diagnosis codes</li>
              <li>Official guidelines and conventions</li>
              <li>Alphabetic index and tabular list</li>
              <li>Highlights of new, revised, and deleted codes</li>
            </ul>
          </div>
          <div class="inside-card benefits-card">
            <h3>Key Benefits</h3>
            <ul>
              <li>Accuracy in coding</li>
              <li>Faster claim processing</li>
              <li>Reduced denials</li>
              <li>Compliance with 2025 standards</li>
            </ul>
          </div>
        </div>
      </section>

      <section aria-labelledby="trust-heading">
        <h2 id="trust-heading">Why Get Your Code Book Here?</h2>
        <div class="inside-grid">
          <div class="trust-card">Secure checkout</div>
          <div class="trust-card">Fast processing</div>
          <div class="trust-card">Resources curated for medical professionals</div>
          <div class="trust-card">Email support</div>
        </div>
        <div class="trust-bar" aria-label="Trust bar">
          <span>Secure Checkout</span>
          <span>Instant Order Confirmation</span>
          <span>Trusted by Healthcare Professionals</span>
        </div>
      </section>

      <section aria-labelledby="testimonials-heading">
        <h2 id="testimonials-heading">What Professionals Say</h2>
        <div class="testimonial-grid">
          {% assign testimonials = section.blocks | where: 'type', 'testimonial' %}
          {% if testimonials.size > 0 %}
            {% for block in testimonials %}
              <article class="testimonial-card" {{ block.shopify_attributes }}>
                <h3>{{ block.settings.name }}</h3>
                <div class="testimonial-role">{{ block.settings.role }}</div>
                <p>‚Äú{{ block.settings.quote }}‚Äù</p>
              </article>
            {% endfor %}
          {% else %}
            <article class="testimonial-card">
              <h3>Alexandra M.</h3>
              <div class="testimonial-role">CPC, Coding Specialist</div>
              <p>‚ÄúThe 2025 ICD-10-CM updates are all here‚Äîeasy to reference and vital for clean claims.‚Äù</p>
            </article>
            <article class="testimonial-card">
              <h3>Jordan P.</h3>
              <div class="testimonial-role">Revenue Cycle Analyst</div>
              <p>‚ÄúClear layout and official guidelines make team training simple.‚Äù</p>
            </article>
            <article class="testimonial-card">
              <h3>Priya S.</h3>
              <div class="testimonial-role">Student, CCS Candidate</div>
              <p>‚ÄúHelped me study confidently knowing I had the exact 2025 standards.‚Äù</p>
            </article>
          {% endif %}
        </div>
      </section>
    </main>

    <footer class="final-cta">
      <h2>Stay Fully Updated for the 2025 Coding Year</h2>
      <p>Rely on the official ICD-10-CM 2025 code book to code accurately, prevent denials, and stay compliant.</p>
      <a class="cta-button" href="{{ book.url }}" aria-label="Get the 2025 ICD-10-CM Code Book">Get the 2025 ICD-10-CM Code Book</a>
      <div class="cta-reassurance">Perfect for your coding desk, classroom, or office.</div>
    </footer>
  </div>
</section>

