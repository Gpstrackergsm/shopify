<div class="cbt-landing" data-section-type="cbt-worksheets-landing">
  <style>
    .cbt-landing {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      background-color: #EEF6FF;
      color: #475569;
      padding: 4rem 0 5rem;
    }
    .cbt-landing .cbt-container {
      max-width: 1080px;
      margin: 0 auto;
      padding: 0 1.75rem;
    }
    .cbt-landing h1,
    .cbt-landing h2,
    .cbt-landing h3 {
      color: #0F172A;
      margin: 0;
    }
    .cbt-landing .cbt-grid {
      display: grid;
      gap: 2.5rem;
    }
    .cbt-landing .cbt-grid.hero-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      align-items: center;
    }
    .cbt-landing .cbt-hero-title {
      font-size: clamp(2.3rem, 5vw, 3.4rem);
      line-height: 1.1;
      margin-bottom: 1rem;
    }
    .cbt-landing .cbt-hero-subtitle {
      font-size: 1.2rem;
      line-height: 1.7;
      margin-bottom: 1.5rem;
    }
    .cbt-landing .cbt-pill {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      background: #fff;
      color: #1E3A8A;
      font-weight: 600;
      border-radius: 999px;
      padding: 0.35rem 1rem;
      box-shadow: 0 10px 25px rgba(15, 23, 42, 0.12);
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }
    .cbt-landing .cbt-bullets {
      display: grid;
      gap: 0.75rem;
      margin: 0 0 1.75rem;
      padding: 0;
      list-style: none;
    }
    .cbt-landing .cbt-bullets li {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      font-size: 1rem;
      line-height: 1.5;
    }
    .cbt-landing .cbt-bullets li span {
      width: 1.25rem;
      height: 1.25rem;
      border-radius: 999px;
      background: #1E3A8A;
      color: #fff;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-size: 0.85rem;
      flex-shrink: 0;
    }
    .cbt-landing .cbt-btn {
      background: #1E3A8A;
      color: #fff;
      border: none;
      border-radius: 999px;
      padding: 0.95rem 2.5rem;
      font-weight: 700;
      font-size: 1rem;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 18px 35px rgba(30, 58, 138, 0.35);
      transition: opacity 0.2s ease;
    }
    .cbt-landing .cbt-btn:hover,
    .cbt-landing .cbt-btn:focus {
      opacity: 0.9;
    }
    .cbt-landing .cbt-image-card {
      background: #fff;
      border-radius: 20px;
      padding: 1.5rem;
      box-shadow: 0 30px 60px rgba(15, 23, 42, 0.12);
    }
    .cbt-landing .cbt-image-card img {
      width: 100%;
      display: block;
      border-radius: 16px;
    }
    .cbt-landing .cbt-section {
      margin-top: 4rem;
      background: #fff;
      border-radius: 24px;
      padding: 3rem;
      box-shadow: 0 25px 65px rgba(15, 23, 42, 0.08);
    }
    .cbt-landing .cbt-section + .cbt-section {
      margin-top: 2.5rem;
    }
    .cbt-landing .cbt-section h2 {
      font-size: clamp(1.8rem, 3.5vw, 2.4rem);
      margin-bottom: 1.5rem;
    }
    .cbt-landing .cbt-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      gap: 0.9rem;
    }
    .cbt-landing .cbt-list li {
      display: flex;
      gap: 0.9rem;
      align-items: flex-start;
      font-size: 1.05rem;
      line-height: 1.6;
    }
    .cbt-landing .cbt-list li::before {
      content: "";
      width: 0.65rem;
      height: 0.65rem;
      background: #1E3A8A;
      border-radius: 50%;
      margin-top: 0.6rem;
      flex-shrink: 0;
    }
    .cbt-landing .cbt-two-column {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }
    .cbt-landing .cbt-cards-grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }
    .cbt-landing .cbt-card {
      background: #F8FBFF;
      border-radius: 18px;
      padding: 1.5rem;
      border: 1px solid #E2E8F0;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
    }
    .cbt-landing .cbt-testimonial {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .cbt-landing .cbt-testimonial p {
      font-size: 1rem;
      line-height: 1.7;
      margin: 0;
    }
    .cbt-landing .cbt-testimonial strong {
      font-size: 0.95rem;
      color: #0F172A;
    }
    .cbt-landing .cbt-guarantee {
      text-align: center;
    }
    .cbt-landing .cbt-final-cta {
      text-align: center;
      margin-top: 3rem;
    }
    @media (max-width: 640px) {
      .cbt-landing .cbt-section {
        padding: 2rem;
      }
    }
  </style>
  <div class="cbt-container">
    <section class="hero">
      <div class="cbt-grid hero-grid">
        <div>
          <div class="cbt-pill">Evidence-Based CBT Tools</div>
          {% if section.settings.hero_title != blank %}
            <h1 class="cbt-hero-title">{{ section.settings.hero_title }}</h1>
          {% endif %}
          {% if section.settings.hero_subtitle != blank %}
            <p class="cbt-hero-subtitle">{{ section.settings.hero_subtitle }}</p>
          {% endif %}
          {% if section.settings.hero_bullets.size > 0 %}
            <ul class="cbt-bullets">
              {% for bullet in section.settings.hero_bullets %}
                <li>
                  <span>•</span>
                  <div>{{ bullet }}</div>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
          {% if section.settings.hero_cta_text != blank and section.settings.hero_cta_link != blank %}
            <a class="cbt-btn" href="{{ section.settings.hero_cta_link }}">{{ section.settings.hero_cta_text }}</a>
          {% endif %}
        </div>
        {% if section.settings.hero_image != blank %}
          <div class="cbt-image-card hero-image">
            {{ section.settings.hero_image | image_url: width: 900 | image_tag: loading: 'lazy', alt: section.settings.hero_title }}
          </div>
        {% endif %}
      </div>
    </section>

    <section class="cbt-section">
      <div class="cbt-grid hero-grid">
        <div>
          {% if section.settings.inside_title != blank %}
            <h2>{{ section.settings.inside_title }}</h2>
          {% endif %}
          {% if section.settings.inside_list.size > 0 %}
            <ul class="cbt-list">
              {% for item in section.settings.inside_list %}
                <li>{{ item }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        {% if section.settings.inside_image != blank %}
          <div class="cbt-image-card">
            {{ section.settings.inside_image | image_url: width: 900 | image_tag: loading: 'lazy', alt: section.settings.inside_title }}
          </div>
        {% endif %}
      </div>
    </section>

    <section class="cbt-section">
      {% if section.settings.benefits_title != blank %}
        <h2>{{ section.settings.benefits_title }}</h2>
      {% endif %}
      {% if section.settings.benefits_list.size > 0 %}
        <div class="cbt-cards-grid">
          {% for benefit in section.settings.benefits_list %}
            <div class="cbt-card">
              <p>{{ benefit }}</p>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </section>

    <section class="cbt-section">
      {% if section.settings.who_title != blank %}
        <h2>{{ section.settings.who_title }}</h2>
      {% endif %}
      {% if section.settings.who_list.size > 0 %}
        <div class="cbt-two-column">
          {% for audience in section.settings.who_list %}
            <div class="cbt-card">
              <p>{{ audience }}</p>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </section>

    {% if section.settings.testimonials.size > 0 %}
      <section class="cbt-section">
        <h2>What Clinicians Are Saying</h2>
        <div class="cbt-cards-grid">
          {% for testimonial in section.settings.testimonials %}
            <div class="cbt-card cbt-testimonial">
              {% if testimonial.text != blank %}
                <p>“{{ testimonial.text }}”</p>
              {% endif %}
              {% if testimonial.name != blank %}
                <strong>{{ testimonial.name }}</strong>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </section>
    {% endif %}

    <section class="cbt-section cbt-guarantee">
      {% if section.settings.guarantee_title != blank %}
        <h2>{{ section.settings.guarantee_title }}</h2>
      {% endif %}
      {% if section.settings.guarantee_text != blank %}
        <p>{{ section.settings.guarantee_text }}</p>
      {% endif %}
    </section>

    <section class="cbt-final-cta">
      {% if section.settings.final_cta_text != blank and section.settings.final_cta_link != blank %}
        <a class="cbt-btn" href="{{ section.settings.final_cta_link }}">{{ section.settings.final_cta_text }}</a>
      {% endif %}
    </section>
  </div>
</div>

