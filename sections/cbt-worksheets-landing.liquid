<div class="cbt-landing">
  <style>
    .cbt-landing .page-width {max-width: 1200px; margin: 0 auto; padding: 0 2rem;}
    .cbt-hero {padding: 64px 0;}
    .cbt-hero__inner {display: flex; flex-wrap: wrap; align-items: center; gap: 2.5rem;}
    .cbt-hero__text {flex: 1 1 320px;}
    .cbt-hero__image {flex: 1 1 320px; text-align: center;}
    .cbt-hero__image img {max-width: 100%; height: auto; border-radius: 16px; box-shadow: 0 25px 60px rgba(0,0,0,0.08);}
    .cbt-pretitle {text-transform: uppercase; letter-spacing: 0.15em; font-size: 0.9rem; color: #7a5af8; margin-bottom: 0.75rem; font-weight: 600;}
    .cbt-hero h1 {font-size: clamp(2rem, 4vw, 3.25rem); margin-bottom: 1rem;}
    .cbt-hero p {font-size: 1.1rem; color: #4a4a4a;}
    .cbt-bullets {list-style: none; padding: 0; margin: 1.75rem 0; display: grid; gap: 0.75rem;}
    .cbt-bullets li {display: flex; align-items: center; gap: 0.75rem; font-weight: 600; color: #1d1d1d;}
    .cbt-bullet-icon {width: 28px; height: 28px; border-radius: 999px; background: #e6f6ef; color: #1f8a62; display: inline-flex; align-items: center; justify-content: center; font-size: 0.9rem; flex-shrink: 0;}
    .cbt-section {padding: 72px 0;}
    .cbt-section--muted {background: #f8f8fb;}
    .cbt-section h2 {font-size: clamp(1.9rem, 3vw, 2.6rem); margin-bottom: 1rem; text-align: center;}
    .cbt-section p.section-subtitle {max-width: 720px; margin: 0 auto 2.5rem; text-align: center; color: #5c5c5c;}
    .cbt-card-list {list-style: none; margin: 0; padding: 0; display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 1rem;}
    .cbt-card-list li {background: #fff; border-radius: 14px; padding: 1.25rem 1.5rem; box-shadow: 0 15px 40px rgba(18,12,39,0.08); font-weight: 600; color: #2d2d2d;}
    .cbt-benefits {display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1.25rem; margin-top: 2rem;}
    .cbt-benefit-card {background: #fff; border-radius: 16px; padding: 1.5rem; box-shadow: 0 10px 30px rgba(0,0,0,0.06);}
    .cbt-benefit-card h3 {margin-bottom: 0.5rem; font-size: 1.2rem;}
    .cbt-benefit-card p {margin: 0; color: #4c4c4c;}
    .cbt-who-list {list-style: none; padding: 0; margin: 2rem auto 0; display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1rem;}
    .cbt-who-list li {background: #fff; border: 1px solid #e2e2ea; border-radius: 12px; padding: 1.25rem; font-weight: 600; color: #2a2a2a;}
    .cbt-testimonials {display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; margin-top: 2.5rem;}
    .cbt-testimonial {background: #fff; border-radius: 18px; padding: 1.75rem; box-shadow: 0 12px 35px rgba(31, 24, 71, 0.08);}
    .cbt-testimonial p {font-style: italic; margin-bottom: 1rem; color: #3c3c3c;}
    .cbt-testimonial strong {display: block; font-size: 1rem; color: #1f1f1f;}
    .cbt-guarantee {background: #fff9ec; border-radius: 20px; padding: 2rem; border: 1px solid #f8d28c; text-align: center; box-shadow: inset 0 0 0 1px #ffe8bd;}
    .cbt-final-cta {background: linear-gradient(135deg, #5b4ef1, #7a5af8); color: #fff; border-radius: 24px; padding: 2.5rem; text-align: center;}
    .cbt-final-cta h3 {font-size: 2rem; margin-bottom: 1rem;}
    .cbt-final-cta p {font-size: 1.1rem; margin-bottom: 1.5rem;}
    .cbt-button {display: inline-flex; align-items: center; justify-content: center; padding: 0.95rem 2.4rem; border-radius: 999px; font-weight: 600; text-decoration: none; transition: opacity 0.2s ease;}
    .cbt-button--primary {background: #1f8a62; color: #fff;}
    .cbt-button--light {background: #fff; color: #4b3ce8;}
    .cbt-button:hover {opacity: 0.9;}
    @media (max-width: 749px) {
      .cbt-hero {padding-top: 32px;}
      .cbt-hero__inner {flex-direction: column;}
      .cbt-hero__text {text-align: center;}
      .cbt-bullets li {justify-content: center;}
    }
  </style>

  <section class="cbt-hero">
    <div class="page-width">
      <div class="cbt-hero__inner">
        <div class="cbt-hero__text">
          {% if section.settings.hero_subtitle != blank %}
            <p class="cbt-pretitle">{{ section.settings.hero_subtitle }}</p>
          {% endif %}
          {% if section.settings.hero_title != blank %}
            <h1>{{ section.settings.hero_title }}</h1>
          {% endif %}
          <p>65 ready-to-use CBT worksheets designed to guide sessions, reinforce homework, and help clients regulate emotion, challenge unhelpful thoughts, and practice new skills between visits.</p>

          {% assign has_hero_bullets = false %}
          {% for block in section.blocks %}
            {% if block.type == 'hero_bullet' %}
              {% if block.settings.bullet_text != blank %}
                {% assign has_hero_bullets = true %}
                {% break %}
              {% endif %}
            {% endif %}
          {% endfor %}
          {% if has_hero_bullets %}
            <ul class="cbt-bullets">
              {% for block in section.blocks %}
                {% if block.type == 'hero_bullet' %}
                  {% if block.settings.bullet_text != blank %}
                    <li><span class="cbt-bullet-icon">✓</span>{{ block.settings.bullet_text }}</li>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </ul>
          {% endif %}

          {% if section.settings.hero_cta_text != blank %}
            {% if section.settings.hero_cta_link != blank %}
              <a class="cbt-button cbt-button--primary" href="{{ section.settings.hero_cta_link }}">{{ section.settings.hero_cta_text }}</a>
            {% endif %}
          {% endif %}
        </div>
        <div class="cbt-hero__image">
          {% if section.settings.hero_image != blank %}
            {{ section.settings.hero_image | image_url: width: 960 | image_tag: loading: 'lazy', alt: section.settings.hero_title }}
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  {% assign has_inside_items = false %}
  {% for block in section.blocks %}
    {% if block.type == 'inside_item' %}
      {% if block.settings.item_text != blank %}
        {% assign has_inside_items = true %}
        {% break %}
      {% endif %}
    {% endif %}
  {% endfor %}
  {% if has_inside_items %}
    <section class="cbt-section cbt-section--muted">
      <div class="page-width">
        <h2>What’s Inside the CBT Worksheets Bundle?</h2>
        <p class="section-subtitle">Curated prompts, psychoeducation handouts, progress trackers, and intervention worksheets that are ready for print or digital use.</p>
        <ul class="cbt-card-list">
          {% for block in section.blocks %}
            {% if block.type == 'inside_item' %}
              {% if block.settings.item_text != blank %}
                <li>{{ block.settings.item_text }}</li>
              {% endif %}
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </section>
  {% endif %}

  {% assign has_benefit_items = false %}
  {% for block in section.blocks %}
    {% if block.type == 'benefit_item' %}
      {% if block.settings.item_text != blank %}
        {% assign has_benefit_items = true %}
        {% break %}
      {% endif %}
    {% endif %}
  {% endfor %}
  {% if has_benefit_items %}
    <section class="cbt-section">
      <div class="page-width">
        <h2>Key Benefits for Your Practice</h2>
        <p class="section-subtitle">Every worksheet is designed for real-world sessions so you can stay present, productive, and confident.</p>
        <div class="cbt-benefits">
          {% for block in section.blocks %}
            {% if block.type == 'benefit_item' %}
              {% if block.settings.item_text != blank %}
                <div class="cbt-benefit-card">
                  <h3>{{ block.settings.item_text | split: '|' | first }}</h3>
                  {% assign benefit_details = block.settings.item_text | split: '|' | last %}
                  {% if benefit_details != block.settings.item_text %}
                    <p>{{ benefit_details }}</p>
                  {% else %}
                    <p>Practical support to move clients from insight to action.</p>
                  {% endif %}
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}

  {% assign has_who_items = false %}
  {% for block in section.blocks %}
    {% if block.type == 'who_item' %}
      {% if block.settings.item_text != blank %}
        {% assign has_who_items = true %}
        {% break %}
      {% endif %}
    {% endif %}
  {% endfor %}
  {% if has_who_items %}
    <section class="cbt-section cbt-section--muted">
      <div class="page-width">
        <h2>Who Is It For?</h2>
        <p class="section-subtitle">From solo practitioners to group practices, these worksheets adapt to your caseload and modality.</p>
        <ul class="cbt-who-list">
          {% for block in section.blocks %}
            {% if block.type == 'who_item' %}
              {% if block.settings.item_text != blank %}
                <li>{{ block.settings.item_text }}</li>
              {% endif %}
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </section>
  {% endif %}

  {% assign has_testimonials = false %}
  {% for block in section.blocks %}
    {% if block.type == 'testimonial' %}
      {% if block.settings.quote != blank %}
        {% assign has_testimonials = true %}
        {% break %}
      {% endif %}
    {% endif %}
  {% endfor %}
  {% if has_testimonials %}
    <section class="cbt-section">
      <div class="page-width">
        <h2>Therapists Love These Worksheets</h2>
        <p class="section-subtitle">Join thousands of clinicians who use these tools to motivate change and keep therapy momentum between visits.</p>
        <div class="cbt-testimonials">
          {% for block in section.blocks %}
            {% if block.type == 'testimonial' %}
              {% if block.settings.quote != blank %}
                <div class="cbt-testimonial">
                  <p>“{{ block.settings.quote }}”</p>
                  {% if block.settings.name != blank %}
                    <strong>{{ block.settings.name }}</strong>
                  {% endif %}
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}

  {% assign has_guarantee = false %}
  {% for block in section.blocks %}
    {% if block.type == 'guarantee' %}
      {% if block.settings.guarantee_title != blank or block.settings.guarantee_text != blank %}
        {% assign has_guarantee = true %}
        {% break %}
      {% endif %}
    {% endif %}
  {% endfor %}
  {% if has_guarantee %}
    <section class="cbt-section cbt-section--muted">
      <div class="page-width">
        <div class="cbt-guarantee">
          {% for block in section.blocks %}
            {% if block.type == 'guarantee' %}
              {% if block.settings.guarantee_title != blank or block.settings.guarantee_text != blank %}
                {% if block.settings.guarantee_title != blank %}
                  <h3>{{ block.settings.guarantee_title }}</h3>
                {% endif %}
                {% if block.settings.guarantee_text != blank %}
                  <p>{{ block.settings.guarantee_text }}</p>
                {% endif %}
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}

  {% assign has_final_cta = false %}
  {% for block in section.blocks %}
    {% if block.type == 'final_cta' %}
      {% if block.settings.final_cta_text != blank %}
        {% if block.settings.final_cta_link != blank %}
          {% assign has_final_cta = true %}
          {% break %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
  {% if has_final_cta %}
    <section class="cbt-section">
      <div class="page-width">
        <div class="cbt-final-cta">
          <h3>Ready to Motivate Change With Every Session?</h3>
          <p>Download the full library of CBT worksheets and give your clients the structure, inspiration, and accountability they crave.</p>
          {% for block in section.blocks %}
            {% if block.type == 'final_cta' %}
              {% if block.settings.final_cta_text != blank %}
                {% if block.settings.final_cta_link != blank %}
                  <a class="cbt-button cbt-button--light" href="{{ block.settings.final_cta_link }}">{{ block.settings.final_cta_text }}</a>
                {% endif %}
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}
</div>

