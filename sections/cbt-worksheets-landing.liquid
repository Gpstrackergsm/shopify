{% assign product_handle = section.settings.product_handle | default: 'cbt-worksheets' %}
{% assign product = all_products[product_handle] %}
{% if product == blank %}
  <section class="landing-not-found">
    <div class="landing-container">
      <p>Product not found. Please select a valid product.</p>
    </div>
  </section>
{% else %}
  {% assign available_variant = product.first_available_variant %}
  <section class="cbt-landing">
    <div class="landing-container">
      <div class="hero">
        <div class="hero-content">
          {% if section.settings.hero_subtitle != blank %}
            <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>
          {% endif %}
          <h1 class="hero-title">{{ section.settings.hero_title | default: product.title }}</h1>
          <p class="hero-description">{{ product.description | strip_html | truncate: 180 }}</p>
          <div class="hero-price">{{ product.price | money }}</div>
          {% if available_variant %}
            <div class="hero-cta-group">
              <form method="post" action="/cart/add" class="buy-now-form" novalidate>
                <input type="hidden" name="id" value="{{ available_variant.id }}">
                <input type="hidden" name="quantity" value="1">
                <input type="hidden" name="return_to" value="/checkout">
                <button type="submit" class="buy-now">{{ section.settings.hero_cta_text | default: 'Buy Now' }}</button>
              </form>
              {% if section.settings.hero_cta_link != blank %}
                <a class="secondary-link" href="{{ section.settings.hero_cta_link }}">Learn More</a>
              {% endif %}
            </div>
          {% endif %}
        </div>
        <div class="hero-image-wrap">
          {% if section.settings.hero_image != blank %}
            {{ section.settings.hero_image | image_url: width: 900 | image_tag: loading: 'lazy', class: 'hero-image' }}
          {% elsif product.featured_image %}
            {{ product.featured_image | image_url: width: 900 | image_tag: loading: 'lazy', class: 'hero-image' }}
          {% endif %}
        </div>
      </div>

      <div class="benefits">
        <h2>How these worksheets help</h2>
        <div class="benefit-grid">
          {% for block in section.blocks %}
            {% if block.type == 'benefit_item' %}
            <div class="benefit-item" {{ block.shopify_attributes }}>
              <div class="benefit-icon">✓</div>
              <p>{{ block.settings.item_text }}</p>
            </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="inside-look" id="inside">
        <h2>Inside the toolkit</h2>
        <div class="inside-grid">
          {% for block in section.blocks %}
            {% if block.type == 'inside_item' %}
            <div class="inside-item" {{ block.shopify_attributes }}>
              <div class="inside-badge">Included</div>
              <p>{{ block.settings.item_text }}</p>
            </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      {% if product.media.size > 0 %}
        <div class="media-gallery">
          <h2>See the pages</h2>
          <div class="gallery-grid">
            {% for media in product.media limit: 6 %}
              {% assign preview_image = media.preview_image | default: media %}
              {% if preview_image != blank %}
                <div class="gallery-item">
                  {{ preview_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% if section.settings.emotional_story != blank %}
        <div class="story-block">
          <h2>Why it works</h2>
          <div class="story-content">
            {{ section.settings.emotional_story }}
          </div>
        </div>
      {% endif %}

      {% if section.settings.feature_table_enabled %}
        <div class="feature-table">
          <h2>{{ section.settings.feature_table_title }}</h2>
          <div class="feature-table-body">
            <div class="feature-row">
              <div class="feature-label">Format</div>
              <div class="feature-value">Digital download (PDF)</div>
            </div>
            <div class="feature-row">
              <div class="feature-label">Pages</div>
              <div class="feature-value">40+ guided worksheets</div>
            </div>
            <div class="feature-row">
              <div class="feature-label">Focus Areas</div>
              <div class="feature-value">Thought tracking, behavior activation, emotion regulation</div>
            </div>
            <div class="feature-row">
              <div class="feature-label">Access</div>
              <div class="feature-value">Instant download, lifetime access</div>
            </div>
          </div>
        </div>
      {% endif %}

      <div class="social-proof">
        <div class="social-proof-grid">
          {% for block in section.blocks %}
            {% if block.type == 'social_proof' %}
            <div class="proof-item" {{ block.shopify_attributes }}>
              <div class="proof-stat">{{ block.settings.stat }}</div>
              <p>{{ block.settings.caption }}</p>
            </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="testimonials">
        <h2>Therapists are saying</h2>
        <div class="testimonial-grid">
          {% for block in section.blocks %}
            {% if block.type == 'testimonial' %}
            <div class="testimonial-card" {{ block.shopify_attributes }}>
              <p class="quote">“{{ block.settings.quote }}”</p>
              <p class="name">— {{ block.settings.name }}</p>
            </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="final-cta">
        <div class="final-cta-content">
          {% if section.settings.final_cta_heading != blank %}
            <h2>{{ section.settings.final_cta_heading }}</h2>
          {% endif %}
          {% if section.settings.final_cta_subtext != blank %}
            <div class="final-cta-subtext">{{ section.settings.final_cta_subtext }}</div>
          {% endif %}
          {% if available_variant %}
            <form method="post" action="/cart/add" class="buy-now-form" novalidate>
              <input type="hidden" name="id" value="{{ available_variant.id }}">
              <input type="hidden" name="quantity" value="1">
              <input type="hidden" name="return_to" value="/checkout">
              <button type="submit" class="buy-now">{{ section.settings.hero_cta_text | default: 'Buy Now' }}</button>
            </form>
          {% endif %}
          <div class="final-cta-links">
            {% for block in section.blocks %}
              {% if block.type == 'final_cta' and block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="final-link" {{ block.shopify_attributes }}>{{ block.settings.text }}</a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="faq">
        <h2>Questions therapists ask</h2>
        <div class="faq-list">
          {% for block in section.blocks %}
            {% if block.type == 'faq_item' %}
            <details class="faq-item" {{ block.shopify_attributes }}>
              <summary>{{ block.settings.question }}</summary>
              <p>{{ block.settings.answer }}</p>
            </details>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  {% if available_variant %}
    <div class="sticky-bar">
      <div class="sticky-info">
        <span class="sticky-title">{{ product.title }}</span>
        <span class="sticky-price">{{ product.price | money }}</span>
      </div>
      <form method="post" action="/cart/add" class="buy-now-form" novalidate>
        <input type="hidden" name="id" value="{{ available_variant.id }}">
        <input type="hidden" name="quantity" value="1">
        <input type="hidden" name="return_to" value="/checkout">
        <button type="submit" class="buy-now">Buy Now</button>
      </form>
    </div>
  {% endif %}

  {% if available_variant %}
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Product",
        "name": {{ product.title | json }},
        "image": [{% if product.featured_image %}{{ product.featured_image | image_url: width: 1200 | json }}{% endif %}],
        "description": {{ product.description | strip_html | json }},
        "sku": {{ available_variant.sku | json }},
        "brand": {
          "@type": "Brand",
          "name": {{ shop.name | json }}
        },
        "offers": {
          "@type": "Offer",
          "priceCurrency": {{ cart.currency.iso_code | default: shop.currency | json }},
          "price": {{ available_variant.price | money_without_currency | json }},
          "availability": "https://schema.org/{% if available_variant.available %}InStock{% else %}OutOfStock{% endif %}",
          "url": {{ product.url | json }}
        }
      }
    </script>
  {% endif %}
{% endif %}

<style>
.cbt-landing {
  background: #f7f8fb;
  padding: 40px 16px 80px;
  font-family: "Helvetica Neue", Arial, sans-serif;
  color: #1f2a37;
}
.landing-container {
  max-width: 1180px;
  margin: 0 auto;
}
.hero {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 40px;
  align-items: center;
  margin-bottom: 60px;
}
.hero-content {
  background: #fff;
  padding: 32px;
  border-radius: 18px;
  box-shadow: 0 20px 45px rgba(31, 42, 55, 0.08);
}
.hero-title {
  font-size: 2.5rem;
  margin: 8px 0 16px;
}
.hero-subtitle {
  text-transform: uppercase;
  letter-spacing: 2px;
  font-size: 0.85rem;
  color: #5e6a7e;
}
.hero-description {
  font-size: 1rem;
  color: #4c596e;
  margin-bottom: 20px;
}
.hero-price {
  font-size: 1.8rem;
  font-weight: 600;
  margin-bottom: 24px;
}
.hero-cta-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  align-items: center;
}
.hero-image-wrap {
  text-align: center;
}
.hero-image {
  width: 100%;
  border-radius: 22px;
  box-shadow: 0 30px 45px rgba(0,0,0,0.1);
}
.buy-now-form {
  display: inline-flex;
}
.buy-now {
  background: #4f46e5;
  color: #fff;
  border: none;
  padding: 14px 30px;
  border-radius: 999px;
  font-size: 1rem;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.buy-now:hover {
  transform: translateY(-1px);
  box-shadow: 0 15px 30px rgba(79, 70, 229, 0.3);
}
.secondary-link {
  color: #4f46e5;
  font-weight: 600;
  text-decoration: none;
}
.benefits, .inside-look, .media-gallery, .story-block, .feature-table, .social-proof, .testimonials, .final-cta, .faq {
  margin-bottom: 60px;
}
.benefit-grid, .inside-grid, .gallery-grid, .social-proof-grid, .testimonial-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-top: 24px;
}
.benefit-item, .inside-item, .proof-item, .testimonial-card {
  background: #fff;
  padding: 20px;
  border-radius: 16px;
  box-shadow: 0 12px 25px rgba(31, 42, 55, 0.08);
}
.benefit-icon {
  width: 36px;
  height: 36px;
  background: rgba(79, 70, 229, 0.1);
  color: #4f46e5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
}
.inside-badge {
  display: inline-block;
  background: rgba(79, 70, 229, 0.1);
  color: #4f46e5;
  padding: 4px 12px;
  border-radius: 999px;
  font-size: 0.85rem;
  margin-bottom: 10px;
}
.gallery-item img {
  width: 100%;
  border-radius: 18px;
  box-shadow: 0 12px 25px rgba(0,0,0,0.08);
}
.story-block {
  background: #fff;
  padding: 32px;
  border-radius: 20px;
  box-shadow: 0 20px 40px rgba(0,0,0,0.08);
}
.feature-table {
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 20px 40px rgba(0,0,0,0.08);
  padding: 32px;
}
.feature-table-body {
  margin-top: 20px;
}
.feature-row {
  display: flex;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid #edf1f7;
}
.feature-row:last-child {
  border-bottom: none;
}
.feature-label {
  font-weight: 600;
  color: #5e6a7e;
}
.feature-value {
  text-align: right;
  color: #1f2a37;
}
.proof-stat {
  font-size: 2rem;
  font-weight: 600;
  color: #4f46e5;
}
.testimonial-card .quote {
  font-size: 1rem;
  color: #1f2a37;
  margin-bottom: 12px;
}
.final-cta {
  background: #111827;
  color: #fff;
  border-radius: 24px;
  padding: 48px;
  box-shadow: 0 30px 60px rgba(17, 24, 39, 0.4);
}
.final-cta .buy-now {
  background: #10b981;
}
.final-link {
  display: inline-block;
  margin-top: 12px;
  color: #a5b4fc;
  text-decoration: underline;
}
.faq-list details {
  background: #fff;
  padding: 18px 24px;
  border-radius: 16px;
  margin-bottom: 12px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.05);
}
.faq-list summary {
  cursor: pointer;
  font-weight: 600;
}
.sticky-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #e5e7eb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 20px;
  box-shadow: 0 -10px 30px rgba(0,0,0,0.08);
  z-index: 50;
}
.sticky-info {
  display: flex;
  flex-direction: column;
}
.sticky-title {
  font-weight: 600;
}
.sticky-price {
  color: #4f46e5;
  font-weight: 600;
}
@media (min-width: 768px) {
  .sticky-bar {
    display: none;
  }
}
@media (max-width: 767px) {
  .hero-content, .story-block, .feature-table, .final-cta {
    padding: 24px;
  }
  .hero-title {
    font-size: 2rem;
  }
  .buy-now {
    width: 100%;
    justify-content: center;
  }
  .buy-now-form {
    width: 100%;
  }
}
</style>
{% schema %}
{
  "name": "CBT Landing",
  "settings": [
    {"type": "text", "id": "product_handle", "label": "Product handle", "default": "cbt-worksheets"},
    {"type": "text", "id": "hero_title", "label": "Hero title"},
    {"type": "text", "id": "hero_subtitle", "label": "Hero subtitle"},
    {"type": "image_picker", "id": "hero_image", "label": "Hero image"},
    {"type": "text", "id": "hero_cta_text", "label": "Hero CTA text", "default": "Buy Now"},
    {"type": "url", "id": "hero_cta_link", "label": "Secondary CTA link"},
    {"type": "richtext", "id": "emotional_story", "label": "Emotional story"},
    {"type": "text", "id": "feature_table_title", "label": "Feature table title", "default": "What's inside"},
    {"type": "checkbox", "id": "feature_table_enabled", "label": "Show feature table", "default": true},
    {"type": "text", "id": "final_cta_heading", "label": "Final CTA heading", "default": "Ready to download?"},
    {"type": "richtext", "id": "final_cta_subtext", "label": "Final CTA subtext"}
  ],
  "blocks": [
    {
      "type": "benefit_item",
      "name": "Benefit",
      "settings": [
        {"type": "text", "id": "item_text", "label": "Benefit text"}
      ]
    },
    {
      "type": "inside_item",
      "name": "Inside item",
      "settings": [
        {"type": "text", "id": "item_text", "label": "Inside item text"}
      ]
    },
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {"type": "text", "id": "name", "label": "Name"},
        {"type": "textarea", "id": "quote", "label": "Quote"}
      ]
    },
    {
      "type": "faq_item",
      "name": "FAQ",
      "settings": [
        {"type": "text", "id": "question", "label": "Question"},
        {"type": "textarea", "id": "answer", "label": "Answer"}
      ]
    },
    {
      "type": "social_proof",
      "name": "Social proof",
      "settings": [
        {"type": "text", "id": "stat", "label": "Stat"},
        {"type": "text", "id": "caption", "label": "Caption"}
      ]
    },
    {
      "type": "final_cta",
      "name": "Final CTA link",
      "settings": [
        {"type": "text", "id": "text", "label": "Link text"},
        {"type": "url", "id": "link", "label": "Link URL"}
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Landing - cbt-worksheets",
      "blocks": [
        {"type": "benefit_item"},
        {"type": "benefit_item"},
        {"type": "inside_item"},
        {"type": "testimonial"},
        {"type": "social_proof"},
        {"type": "faq_item"},
        {"type": "final_cta"}
      ]
    }
  ]
}
{% endschema %}
